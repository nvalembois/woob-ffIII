{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "baseBranches": ["main", "master"],
    "timezone": "Europe/Paris",
    "schedule": ["before 4am"],
    "prCreation": "immediate",
    "automerge": true,
    "prHourlyLimit": 15,
    "packageRules": [
      {
        "matchDatasources": ["npm"],
        "groupName": "images"
      }
    ]
  }
